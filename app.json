{
  "expo": {
    "name": "rn-expo-boilerplate",
    "slug": "rn-expo-boilerplate",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./src/assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      {
        "fonts": [
          "./src/assets/fonts/Inter/Inter-Regular.ttf",
          "./src/assets/fonts/Inter/Inter-Medium.ttf",
          "./src/assets/fonts/Inter/Inter-SemiBold.ttf",
          "./src/assets/fonts/Inter/Inter-Bold.ttf"
        ]
      }
    ]
  }
}
