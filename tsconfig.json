{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "typeRoots": ["./types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~api": ["src/api"],
      "~assets": ["src/assets"],
      "~components": ["src/components"],
      "~hooks": ["src/hooks"],
      "~navigation": ["src/navigation"],
      "~screens": ["src/screens"],
      "~store": ["src/stores"],
      "~ui": ["src/ui"],
      "~utils": ["src/utils"],
      "~i18n": ["src/i18n"]
    },
    "jsx": "react-native"
  },
  "include": ["**/*.ts", "**/*.tsx", ".eslintrc.js", "prettier.config.cjs"]
}
